# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       controllers.Application.index

POST    /api/register                           controllers.Users.register
POST    /api/login                              controllers.Users.login
GET     /api/user/:email                        controllers.Users.isUsed(email)
GET     /api/user/infos/:email                  controllers.Users.userInformations(email)

GET     /api/dashboard/capital/available        controllers.Users.availableCapital
GET     /api/dashboard/capital/allocated        controllers.Users.allocatedCapital

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
